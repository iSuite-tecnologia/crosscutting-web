{
  "name": "@isuite/crosscutting-web",
  "version": "1.0.2",
  "description": "iSuite utility library",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky install",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "docs": "typedoc --entryPoints src --out docs",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "commit": "npm run format && npm run test && git add -A . && git-cz",
    "version": "npm version patch && git add package.json",
    "publish": "npm publish",
    "release": "standard-version"
  },
  "author": "Anderson Saraiva",
  "license": "MIT",
  "keywords": [
    "typescript",
    "javascript",
    "utils",
    "validations",
    "formatting",
    "lib",
    "data",
    "strings",
    "arrays",
    "parse",
    "json"
  ],
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.0",
    "typedoc": "^0.26.10",
    "typescript": "^5.6.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
